<a href="/courses/create" class="mb-4 mt-4 d-block justify-content-center">
    <button type="button" class="btn btn-secondary">Thêm khóa học</button>
  </a>
<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4">
        <div class="card  mb-4" style="width: 18rem;">
          <a href="/courses/{{this.slug}}">
          <img class="card-img-top" src={{this.image}} alt={{this.name}} />
          </a>
          <div class="card-body">
             <a href="/courses/{{this.slug}}">
         <h5 class="card-title">{{this.name}}</h5>
          </a>
            <p class="card-text">{{this.user}}</p>
            <a href="#" class="btn btn-primary">Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>